<div class="page-content">

  <div class="content-box">
    <div class="bank-card">
      <%= image_tag("puurse_logo.png", alt: "Image Description") %>
    </div>
    <p> Budget Categories </p>
    <div class="t-categories">
      <div class="category">
        <box-icon name='dashboard' type='solid' ></box-icon>
      </div>

      <div class="category">
        <box-icon name='restaurant' color='#ff8a5c' ></box-icon>
      </div>

      <div class="category">
        <box-icon name='dashboard' type='solid' ></box-icon>
      </div>

      <div class="category">
        <box-icon name='dashboard' type='solid' ></box-icon>
      </div>

      <div class="category">
        <box-icon name='dashboard' type='solid' ></box-icon>
      </div>

      <div class="category">
        <box-icon name='dashboard' type='solid' ></box-icon>
      </div>

    </div>
    <div class="t-info">
      <p>All Transactions</p>
      <div class="budget-info">
        <p>Monthly Total</p>
        <div class="limit">
          (Add Limit PLACEHOLDER FOR BUTTON)
        </div>
      </div>
    </div>
    <div class="transactions">
      <% @transactions.each do |transaction| %>
      <div class="t-card">
        <p><%= transaction[:date] %></p>
        <p><%= transaction[:retailer] %></p>
        <p><%= transaction[:bank] %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>
